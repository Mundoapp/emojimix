<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_marginBottom="100dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/emojixerlogo">

            </ImageView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">



 <include layout="@layout/fusion_emoji"></include>

                <ImageView
                    android:layout_marginTop="-13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lineab"></ImageView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardBackgroundColor="#C3E3FF"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"

                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView

                            android:id="@+id/emojisSlider1"
                            android:layout_width="match_parent"
                            android:fadingEdge="horizontal"
                            android:fadingEdgeLength="60dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
</androidx.cardview.widget.CardView>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="-8dp"
    android:layout_marginBottom="-5dp"

    android:layout_height="wrap_content">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/icbuscar1"

        android:layout_width="60dp"
        android:layout_height="60dp"
        app:lottie_fileName="buscar1.json"
        app:lottie_loop="true" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/iconmas"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="70dp"
        android:layout_toEndOf="@+id/icbuscar1"
        app:lottie_fileName="mas.json"
        app:lottie_loop="false" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/icbuscar2"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="255dp"
        android:layout_marginEnd="15dp"
        app:lottie_fileName="buscar2.json"
        app:lottie_loop="true" />



</RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/mano"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_centerHorizontal="true"
                        app:lottie_fileName="mano_intro.json"
                        app:lottie_loop="true" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card"
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="#E3CBFF"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_height="70dp"
                        android:layout_margin="5dp"

                        android:layout_width="300dp"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/emojisSlider2"
                            android:layout_width="match_parent"
                            android:fadingEdge="horizontal"
                            android:fadingEdgeLength="60dp"
                            android:layout_height="match_parent" />

<!--                        <include layout="@layout/stickers_add_bottom_fragment" />-->

                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/textointro"
                            android:layout_marginTop="25dp"
                            android:layout_below="@+id/card"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/desliza"
                            ></TextView>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/fondo_menu"

            android:layout_height="80dp"
            android:layout_alignTop="@+id/ad_view_container"
            >

            <Button
                android:id="@+id/button2"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"


                android:onClick="abriremojis"

                android:text="@string/my"
                android:textColor="@color/gris"
                android:textSize="5pt"
                android:background="@android:color/transparent"


                app:icon="@drawable/ic_baseline_emoji_emotions_24"
                app:iconTint="@color/gris"
                />



            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/saveEmoji"

                android:layout_centerHorizontal="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:lottie_fileName="boton_disable.json"
                app:lottie_loop="true"/>



            <Button
                android:id="@+id/emojitop"
                android:onClick="abriremojis"

                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:textColor="@color/gris"
                android:drawableEnd="@drawable/baseline_whatshot_24"

                android:text="@string/top"
                android:textSize="5pt"
                android:background="@android:color/transparent"
                android:drawableTint="@color/gris"

         />
        </RelativeLayout>

        <FrameLayout
            android:layout_marginBottom="80dp"
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
