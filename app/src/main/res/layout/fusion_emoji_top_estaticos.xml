<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    xmlns:android="http://schemas.android.com/apk/res/android">



<FrameLayout
        android:id="@+id/frame_emoji_creation"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"

        android:layout_gravity="center_horizontal"

        android:layout_marginEnd="5dp"
        android:background="@android:color/transparent"
        android:layerType="software">

        <com.emojitwomix.activities.WrapContentDraweeView
            android:id="@+id/emojifondo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"


            android:background="@android:color/transparent"
            />

        <FrameLayout
            android:id="@+id/posicionemoji"


            android:layout_width="250dp"
            android:layout_height="250dp">


            <com.emojitwomix.activities.WrapContentDraweeView
                android:id="@+id/mixedEmoji0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"

                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <com.emojitwomix.activities.WrapContentDraweeView

                android:id="@+id/mixedEmoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"

                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                />


            <FrameLayout
                android:id="@+id/posicioncara"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.emojitwomix.activities.WrapContentDraweeView

                    android:id="@+id/mixedEmojiojos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"

                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                  />

                <com.emojitwomix.activities.WrapContentDraweeView

                    android:id="@+id/mixedEmojibocas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"

                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                     />


                <com.emojitwomix.activities.WrapContentDraweeView
                    android:id="@+id/mixedEmojicejas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"

                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop" />


                <com.emojitwomix.activities.WrapContentDraweeView

                    android:id="@+id/mixedEmojiojos_objetos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"

                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    />

                <com.emojitwomix.activities.WrapContentDraweeView

                    android:id="@+id/mixedEmojiobjetos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"

                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    />


                <com.emojitwomix.activities.WrapContentDraweeView

                    android:id="@+id/mixedEmojimanos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"

                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                   />
            </FrameLayout>

            <com.emojitwomix.activities.WrapContentDraweeView

                android:id="@+id/mixedEmojimanos2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"

                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                />



        </FrameLayout>

        <FrameLayout
            android:id="@+id/posicione"

            android:layout_width="250dp"
            android:layout_height="250dp">

            <com.emojitwomix.activities.WrapContentDraweeView

                android:id="@+id/emojiforma"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"

                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
               />
        </FrameLayout>
    </FrameLayout>
    <com.emojitwomix.activities.WrapContentDraweeView

        android:id="@+id/progressBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:lottie_autoPlay="true"
        android:visibility="gone"

        app:lottie_fileName="loading.json"
        app:lottie_loop="false"
        android:gravity="center"
        android:layout_margin="3dp"/>
    <com.emojitwomix.activities.WrapContentDraweeView
        android:visibility="gone"
        android:id="@+id/explosion"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"


        android:background="@android:color/transparent"
        android:scaleType="centerCrop" />
</RelativeLayout>
