<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="250dp"
            android:background="#E0F3FF"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/frame_emoji_creation">

            <FrameLayout
                android:id="@+id/fondodescarga"
                android:layout_width="100dp"
                android:background="#EADEFF"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/idemojitxt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#AD7EFF"
                    android:textStyle="bold"
                    android:text="Top"></TextView>


                <TextView
                    android:id="@+id/votos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textSize="13dp"
                    android:text="25254" />
                <ImageView
                    android:id="@+id/guardar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="65dp"
                    app:srcCompat="@drawable/ic_outline_save_alt_24"
                    app:tint="#AD7EFF" />
            </FrameLayout>



            <ImageView
                android:id="@+id/femoji1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/sad" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/mas" />
            <ImageView
                android:id="@+id/femoji2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/sad" />
        </FrameLayout>

        <include layout="@layout/fusion_emoji_top"></include>




        <com.emojitwomix.activities.WrapContentDraweeView
            android:id="@+id/emoji"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
         />











    </androidx.cardview.widget.CardView>

</LinearLayout>